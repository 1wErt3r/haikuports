SUMMARY="A C++ wrapper for the LMDB database engine"
DESCRIPTION="LMDBXX is C++ wrapper for the compact, fast, powerful, and robust LMDB"
HOMEPAGE="https://github.com/drycpp/lmdbxx/releases/download/0.9.14.0/lmdbxx-0.9.14.0.tar.gz"
COPYRIGHT="Arto Bendiken"
LICENSE="Unlicense"
REVISION="1"
SOURCE_URI="https://github.com/drycpp/lmdbxx/archive/$portVersion.tar.gz"
CHECKSUM_SHA256="99ae16599829c7c9dfb396382bb8e774031ca7e839c38e0c5fef124f409f19a2"

ARCHITECTURES="any"

PROVIDES="
	lmdbxx = $portVersion
	"
REQUIRES="
	haiku$secondaryArchSuffix
	lmdb${secondaryArchSuffix}_devel
	"
BUILD_REQUIRES="
	haiku${secondaryArchSuffix}_devel
	"
BUILD_PREREQUIRES="
	cmd:mkdir
	cmd:cp
	"

INSTALL()
{
	mkdir -p $includeDir
	cp lmdb++.h $includeDir/

	mkdir -p $dataDir/licenses
	cp UNLICENSE $dataDir/licenses/Unlicense
}
